<Application
    x:Class="Source.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Source"
    RequestedTheme="Light" 
    >
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="SubtitleStyle" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="FontFamily" Value="Poiret One"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Opacity" Value="0.7"/>
            </Style>
            <Style x:Key="TitleMainStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
                <Setter Property="FontSize" Value="50"/>
                <Setter Property="FontFamily" Value="Ravie"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
